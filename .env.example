# ALCIS Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Security (REQUIRED - Generate secure keys)
SECRET_KEY=your-secret-key-here-generate-a-secure-one
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64

# Database
DATABASE_URL=postgresql://alcis:alcis@localhost/alcis
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION=900

# Crawler Settings
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_RATE_LIMIT=1.0

# AI Settings
AI_MODEL_NAME=distilbert-base-uncased
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_REASONING_STEPS=10

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=

# External Services (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true